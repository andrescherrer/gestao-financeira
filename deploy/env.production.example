# ============================================
# Configuração de Produção
# ============================================
# Copie este arquivo para .env.production na raiz do projeto e configure os valores
# NUNCA commite o arquivo .env.production com valores reais!

# ============================================
# Ambiente
# ============================================
ENV=production

# ============================================
# Docker
# ============================================
DOCKER_REGISTRY=your-registry.com/gestao-financeira
IMAGE_TAG=latest

# ============================================
# Servidor
# ============================================
API_PORT=8080
API_READ_TIMEOUT=30s
API_WRITE_TIMEOUT=30s
API_IDLE_TIMEOUT=120s
API_BODY_LIMIT=10485760

# ============================================
# Banco de Dados PostgreSQL
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=gestao_financeira_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=gestao_financeira
POSTGRES_SSLMODE=require
POSTGRES_MAX_OPEN_CONNS=50
POSTGRES_MAX_IDLE_CONNS=10
POSTGRES_CONN_MAX_LIFETIME=5m

# ============================================
# Redis
# ============================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD
REDIS_PORT=6379
REDIS_TTL=5m

# ============================================
# JWT
# ============================================
# IMPORTANTE: Use uma chave forte e aleatória!
# Gere com: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET_KEY
JWT_EXPIRATION=24h
JWT_ISSUER=gestao-financeira-api
JWT_SIGNING_METHOD=HS256

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# CORS
# ============================================
# Separe múltiplas origens por vírgula
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_MAX_AGE=86400

# ============================================
# Frontend
# ============================================
VITE_API_URL=https://api.yourdomain.com/api/v1
VITE_ENV=production
VITE_APP_NAME=Gestão Financeira
VITE_APP_VERSION=1.0.0
FRONTEND_PORT=80

# ============================================
# Observabilidade
# ============================================
TRACING_ENABLED=true
JAEGER_URL=http://jaeger:14268/api/traces
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ROOT_URL=https://grafana.yourdomain.com
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_ME_GENERATE_SECRET_KEY

# ============================================
# Migrations
# ============================================
MIGRATIONS_PATH=file://migrations

# ============================================
# Backup
# ============================================
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSED=true

